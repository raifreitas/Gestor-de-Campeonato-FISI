<Window x:Class="Futbol9_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Futbol9_2"
        mc:Ignorable="d"
        Title="CAMPEONATO FISI UNAP" Height="600" Width="900"
        Background="#FFEFEFEF"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#FF1976D2"/>
        <SolidColorBrush x:Key="PrimaryLightBrush" Color="#FF42A5F5"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#FF1565C0"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FFD32F2F"/>
        <SolidColorBrush x:Key="LightTextBrush" Color="White"/>
        <SolidColorBrush x:Key="DarkTextBrush" Color="#212121"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#FFCCCCCC"/>
        <SolidColorBrush x:Key="BackgroundLightBrush" Color="White"/>
        <SolidColorBrush x:Key="BackgroundMediumBrush" Color="#FFF5F5F5"/>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="Gray"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
            <Setter Property="RowBackground" Value="{StaticResource BackgroundLightBrush}"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource BackgroundMediumBrush}"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="4"/>
        </Style>

        <Style x:Key="Header" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryDarkBrush}"/>
        </Style>
        <Style x:Key="SubHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
        </Style>
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style TargetType="TabItem">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
            <Setter Property="Background" Value="#FFE0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <TabControl>

        <TabItem Header="Configuración">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="20" Grid.IsSharedSizeScope="True">
                    <TextBlock Text="CONFIGURACIÓN DEL CAMPEONATO" Style="{StaticResource Header}"/>

                    <Border Style="{StaticResource CardBorder}">
                        <StackPanel>
                            <TextBlock Text="Datos Generales" Style="{StaticResource SubHeader}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="LabelGroup"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Nombre Campeonato:" Style="{StaticResource FormLabel}"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="CAMPEONATO FISI UNAP CUP 2025" Width="300" HorizontalAlignment="Left"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Fecha Inicio:" Style="{StaticResource FormLabel}" Margin="0,10,10,0"/>
                                <DatePicker Grid.Row="1" Grid.Column="1" SelectedDate="2025-10-10" Width="200" HorizontalAlignment="Left" Margin="4,10,4,4"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Fecha Fin:" Style="{StaticResource FormLabel}" Margin="0,10,10,0"/>
                                <DatePicker Grid.Row="2" Grid.Column="1" SelectedDate="2025-11-09" Width="200" HorizontalAlignment="Left" Margin="4,10,4,4"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource CardBorder}" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Tipos de Pago" Style="{StaticResource SubHeader}"/>
                                <ListBox>
                                    <ListBoxItem Content="Efectivo"/>
                                    <ListBoxItem Content="Yape"/>
                                    <ListBoxItem Content="Plin"/>
                                </ListBox>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Style="{StaticResource CardBorder}" Margin="10,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Estado de Equipo" Style="{StaticResource SubHeader}"/>
                                <ListBox>
                                    <ListBoxItem Content="Activo"/>
                                    <ListBoxItem Content="Debe"/>
                                    <ListBoxItem Content="Retirado"/>
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Grid Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource CardBorder}" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Estado de Jugador" Style="{StaticResource SubHeader}"/>
                                <ListBox>
                                    <ListBoxItem Content="Activo"/>
                                    <ListBoxItem Content="Amarilla"/>
                                    <ListBoxItem Content="Roja"/>
                                    <ListBoxItem Content="Suspendido"/>
                                </ListBox>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Style="{StaticResource CardBorder}" Margin="10,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Estado de Calendario" Style="{StaticResource SubHeader}"/>
                                <ListBox>
                                    <ListBoxItem Content="Programado"/>
                                    <ListBoxItem Content="Iniciado"/>
                                    <ListBoxItem Content="Finalizado"/>
                                    <ListBoxItem Content="Suspendido"/>
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Grid Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource CardBorder}" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Cancha" Style="{StaticResource SubHeader}"/>
                                <TextBox Text="Colegio CNI"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Style="{StaticResource CardBorder}" Margin="10,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Grupos" Style="{StaticResource SubHeader}"/>
                                <ListBox Height="60">
                                    <ListBoxItem Content="A"/>
                                    <ListBoxItem Content="B"/>
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </Grid>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <TabItem Header="Inscripciones y Pagos">
            <StackPanel Margin="20">
                <TextBlock Text="INSCRIPCIONES Y PAGOS" Style="{StaticResource Header}"/>

                <TextBlock Text="Lista de Equipos Inscritos:" Style="{StaticResource SubHeader}"/>
                <DataGrid x:Name="dgEquiposInscritos" Height="150" AutoGenerateColumns="True" Margin="0,0,0,15"/>

                <TextBlock Text="Registrar Pago / Inscripción:" Style="{StaticResource SubHeader}"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Equipo:" Width="120" Style="{StaticResource FormLabel}"/>
                    <ComboBox x:Name="cbEquipo" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Monto / Tipo de Pago:" Width="120" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="txtMontoPago" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="Método de Pago:" Width="120" Style="{StaticResource FormLabel}"/>
                    <ComboBox x:Name="cbMetodoPago" Width="200">
                        <ComboBoxItem Content="Efectivo"/>
                        <ComboBoxItem Content="Yape"/>
                        <ComboBoxItem Content="Plin"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,5">
                    <Button x:Name="btnRegistrarInscripcion" Content="Registrar Inscripción" Width="150" Click="btnRegistrarInscripcion_Click"/>
                    <Button x:Name="btnVerificarDeuda" Content="Verificar Deuda" Width="120" Click="btnVerificarDeuda_Click"/>
                    <Button x:Name="btnConfirmarPago" Content="Confirmar Pago" Width="120" Click="btnConfirmarPago_Click"/>
                </StackPanel>
            </StackPanel>
        </TabItem>

        <TabItem Header="Equipos">
            <StackPanel Margin="20">
                <TextBlock Text="EQUIPOS" Style="{StaticResource Header}"/>
                <DataGrid x:Name="dgRegistroEquipos" Height="400">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="60"/>
                        <DataGridTextColumn Header="Nombre Equipo" Binding="{Binding NombreEquipo}" Width="*"/>
                        <DataGridTextColumn Header="Delegado" Binding="{Binding Delegado}" Width="1.5*"/>
                        <DataGridTextColumn Header="Móvil Delegado" Binding="{Binding MovilDelegado}" Width="120"/>
                        <DataGridTextColumn Header="Forma de Pago" Binding="{Binding FormaDePago}" Width="100"/>
                        <DataGridTextColumn Header="Monto" Binding="{Binding Monto}" Width="70"/>
                        <DataGridTextColumn Header="Fecha Pago" Binding="{Binding FechaPago}" Width="100"/>
                        <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </TabItem>

        <TabItem Header="Jugadores">
            <StackPanel Margin="20">
                <TextBlock Text="Registro de Jugadores" Style="{StaticResource Header}"/>
                <DataGrid x:Name="dgJugadores" Height="400">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Equipo" Binding="{Binding NombreEquipo}" Width="*"/>
                        <DataGridTextColumn Header="DNI" Binding="{Binding DNI}" Width="100"/>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="2*"/>
                        <DataGridTextColumn Header="Apellidos" Binding="{Binding Apellidos}" Width="2*"/>
                        <DataGridTextColumn Header="N°" Binding="{Binding Numero}" Width="50"/>
                        <DataGridTextColumn Header="Móvil UNAP" Binding="{Binding MovilUnap}" Width="120"/>
                        <DataGridTextColumn Header="Camiseta" Binding="{Binding Camiseta}" Width="80"/>
                        <DataGridTextColumn Header="Posición" Binding="{Binding Posicion}" Width="120"/>
                        <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </TabItem>

        <TabItem Header="Grupos">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="GRUPOS" Style="{StaticResource Header}"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Cantidad de Grupos:" Width="150" Style="{StaticResource FormLabel}"/>
                        <ComboBox x:Name="cbCantidadGrupos" Width="120">
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="6"/>
                            <ComboBoxItem Content="8"/>
                        </ComboBox>
                    </StackPanel>

                    <Button x:Name="btnGenerarGrupos" Content="Generar Sorteo Automático" Width="220" Height="30" Margin="0,0,0,15"/>

                    <TextBlock Text="Resultado del Sorteo:" Style="{StaticResource SubHeader}"/>
                    <ItemsControl x:Name="panelGrupos">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource CardBorder}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding NombreGrupo}" Style="{StaticResource SubHeader}" Margin="0"/>
                                        <DataGrid ItemsSource="{Binding Equipos}" AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="Column" Height="150">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="ID Equipo" Binding="{Binding IdEquipo}" Width="*"/>
                                                <DataGridTextColumn Header="Nombre Equipo" Binding="{Binding NombreEquipo}" Width="2*"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock Text="Lista de Equipos por Grupo" Style="{StaticResource SubHeader}"/>
                    <DataGrid x:Name="dgGrupos" Height="250">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Grupo" Binding="{Binding Grupo}" Width="60"/>
                            <DataGridTextColumn Header="ID Equipo" Binding="{Binding IdEquipo}" Width="120"/>
                            <DataGridTextColumn Header="Nombre Equipo" Binding="{Binding NombreEquipo}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button x:Name="btnConfirmarGrupos" Content="Confirmar y Bloquear Grupos" Width="220" Height="30" Margin="0,20,0,0"/>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <TabItem Header="Calendario">
            <StackPanel Margin="20">
                <TextBlock Text="CALENDARIO DE PARTIDOS" Style="{StaticResource Header}"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Filtrar por Grupo:" Width="120" Style="{StaticResource FormLabel}"/>
                    <ComboBox x:Name="cbFiltroGrupo" Width="120">
                        <ComboBoxItem Content="Todos"/>
                        <ComboBoxItem Content="A"/>
                        <ComboBoxItem Content="B"/>
                    </ComboBox>
                </StackPanel>

                <DataGrid x:Name="dgCalendario" Height="350">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID Partido" Binding="{Binding IdPartido}" Width="100"/>
                        <DataGridTextColumn Header="Grupo" Binding="{Binding Grupo}" Width="60"/>
                        <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="110"/>
                        <DataGridTextColumn Header="Hora" Binding="{Binding Hora}" Width="90"/>
                        <DataGridTextColumn Header="Equipo Local" Binding="{Binding EquipoLocal}" Width="*"/>
                        <DataGridTextColumn Header="Equipo Visitante" Binding="{Binding EquipoVisitante}" Width="*"/>
                        <DataGridTextColumn Header="Cancha" Binding="{Binding Cancha}" Width="130"/>
                        <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="100"/>
                        <DataGridTextColumn Header="Descansa" Binding="{Binding Descansa}" Width="130"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </TabItem>

        <TabItem Header="Partidos y Resultados">
            <StackPanel Margin="20">
                <TextBlock Text="REGISTRO DE PARTIDOS Y RESULTADOS" Style="{StaticResource Header}"/>
                <TextBlock Text="Lista de Resultados de Partidos:" Style="{StaticResource SubHeader}"/>
                <DataGrid x:Name="dgResultadosPartidos" Height="350">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID Partido" Binding="{Binding IDPartido}" Width="100"/>
                        <DataGridTextColumn Header="Equipo Local" Binding="{Binding EquipoLocal}" Width="*"/>
                        <DataGridTextColumn Header="Goles Local" Binding="{Binding GolesLocal}" Width="100"/>
                        <DataGridTextColumn Header="Equipo Visitante" Binding="{Binding EquipoVisitante}" Width="*"/>
                        <DataGridTextColumn Header="Goles Visitante" Binding="{Binding GolesVisitante}" Width="110"/>
                        <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </TabItem>

        <TabItem Header="Goles y Estadísticas">
            <StackPanel Margin="20">
                <TextBlock Text="GOLES Y ESTADÍSTICAS" Style="{StaticResource Header}"/>
                <DataGrid x:Name="dgGolesEstadisticas" Height="350">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID Partido" Binding="{Binding IdPartido}" Width="100"/>
                        <DataGridTextColumn Header="Equipo" Binding="{Binding Equipo}" Width="*"/>
                        <DataGridTextColumn Header="DNI Jugador" Binding="{Binding DniJugador}" Width="120"/>
                        <DataGridTextColumn Header="Minuto" Binding="{Binding Minuto}" Width="80"/>
                        <DataGridTextColumn Header="Tipo Gol" Binding="{Binding TipoGol}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </TabItem>

        <TabItem Header="Tabla de Posiciones">
            <StackPanel Margin="20">
                <TextBlock Text="TABLA DE POSICIONES" Style="{StaticResource Header}"/>
                <DataGrid x:Name="dgTablaPosiciones" Height="350">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Grupo" Binding="{Binding Grupo}" Width="60"/>
                        <DataGridTextColumn Header="Equipo" Binding="{Binding Equipo}" Width="*"/>
                        <DataGridTextColumn Header="PJ" Binding="{Binding PJ}" Width="40"/>
                        <DataGridTextColumn Header="PG" Binding="{Binding PG}" Width="40"/>
                        <DataGridTextColumn Header="PE" Binding="{Binding PE}" Width="40"/>
                        <DataGridTextColumn Header="PP" Binding="{Binding PP}" Width="40"/>
                        <DataGridTextColumn Header="GF" Binding="{Binding GF}" Width="40"/>
                        <DataGridTextColumn Header="GC" Binding="{Binding GC}" Width="40"/>
                        <DataGridTextColumn Header="DG" Binding="{Binding DG}" Width="40"/>
                        <DataGridTextColumn Header="PTS" Binding="{Binding PTS}" Width="50"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </TabItem>

    </TabControl>
</Window>