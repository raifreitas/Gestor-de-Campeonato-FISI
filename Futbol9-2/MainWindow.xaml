<Window x:Class="Futbol9_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Futbol9_2"
        mc:Ignorable="d"
        Title="GESTOR DE CAMPEONATOS FISI UNAP" Height="600" Width="900"
        Background="#FFEFEFEF"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#FF1976D2"/>
        <SolidColorBrush x:Key="PrimaryLightBrush" Color="#FF42A5F5"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#FF1565C0"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FFD32F2F"/>
        <SolidColorBrush x:Key="LightTextBrush" Color="White"/>
        <SolidColorBrush x:Key="DarkTextBrush" Color="#212121"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#FFCCCCCC"/>
        <SolidColorBrush x:Key="BackgroundLightBrush" Color="White"/>
        <SolidColorBrush x:Key="BackgroundMediumBrush" Color="#FFF5F5F5"/>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="Gray"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
            <Setter Property="RowBackground" Value="{StaticResource BackgroundLightBrush}"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource BackgroundMediumBrush}"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="4"/>
        </Style>

        <Style x:Key="Header" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryDarkBrush}"/>
        </Style>
        <Style x:Key="SubHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
        </Style>
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style TargetType="TabItem">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
            <Setter Property="Background" Value="#FFE0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>
    <!-- Contenedor Principal-->
    <TabControl>

        <TabItem Header="Configuración">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20" Grid.IsSharedSizeScope="True">
                    <TextBlock Text="CONFIGURACIÓN DEL CAMPEONATO" Style="{StaticResource Header}"/>
                    
                    <!--Seccion 1: Datos Generales-->
                    <Border Style="{StaticResource CardBorder}">
                        <StackPanel>
                            <TextBlock Text="Datos Generales" Style="{StaticResource SubHeader}"/>
                            <Grid>
                                <!--Se definen 2 columnas, la primera es mas importante-->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="LabelGroup"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!--Se definen 3 filas-->
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!--Se les da contenido y estilo a las filas y columnas-->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Nombre Campeonato:" Style="{StaticResource FormLabel}"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="CAMPEONATO FISI UNAP CUP 2025" Width="300" HorizontalAlignment="Left"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Fecha Inicio:" Style="{StaticResource FormLabel}" Margin="0,10,10,0"/>
                                <DatePicker Grid.Row="1" Grid.Column="1" SelectedDate="2025-10-10" Width="200" HorizontalAlignment="Left" Margin="4,10,4,4"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Fecha Fin:" Style="{StaticResource FormLabel}" Margin="0,10,10,0"/>
                                <DatePicker Grid.Row="2" Grid.Column="1" SelectedDate="2025-11-09" Width="200" HorizontalAlignment="Left" Margin="4,10,4,4"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!--Seccion 2: Dos columnas (Tipos de Pago y Estado de Equipo)-->
                    <Grid>
                        
                        <!--Creamos 2 columnas de igual proporcion-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!--LLenamos la columna 0 con contenido y su estilo-->
                        <Border Grid.Column="0" Style="{StaticResource CardBorder}" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Tipos de Pago" Style="{StaticResource SubHeader}"/>
                                <ListBox>
                                    <ListBoxItem Content="Efectivo"/>
                                    <ListBoxItem Content="Yape"/>
                                    <ListBoxItem Content="Plin"/>
                                </ListBox>
                            </StackPanel>
                        </Border>

                        <!--LLenamos la columna 1 con contenido y su estilo-->
                        <Border Grid.Column="1" Style="{StaticResource CardBorder}" Margin="10,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Estado de Equipo" Style="{StaticResource SubHeader}"/>
                                <ListBox>
                                    <ListBoxItem Content="Activo"/>
                                    <ListBoxItem Content="Debe"/>
                                    <ListBoxItem Content="Retirado"/>
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!--Seccion 3: Creamos 2 columnas de igual proporcion y el flujo se repite...-->
                    <Grid Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource CardBorder}" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Estado de Jugador" Style="{StaticResource SubHeader}"/>
                                <ListBox>
                                    <ListBoxItem Content="Activo"/>
                                    <ListBoxItem Content="Amarilla"/>
                                    <ListBoxItem Content="Roja"/>
                                    <ListBoxItem Content="Suspendido"/>
                                </ListBox>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Style="{StaticResource CardBorder}" Margin="10,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Estado de Calendario" Style="{StaticResource SubHeader}"/>
                                <ListBox>
                                    <ListBoxItem Content="Programado"/>
                                    <ListBoxItem Content="Iniciado"/>
                                    <ListBoxItem Content="Finalizado"/>
                                    <ListBoxItem Content="Suspendido"/>
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Grid Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource CardBorder}" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Cancha" Style="{StaticResource SubHeader}"/>
                                <TextBox Text="Colegio CNI"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Style="{StaticResource CardBorder}" Margin="10,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Grupos" Style="{StaticResource SubHeader}"/>
                                <ListBox Height="60">
                                    <ListBoxItem Content="A"/>
                                    <ListBoxItem Content="B"/>
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </Grid>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <TabItem Header="Inscripciones y Pagos">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="20">
                    <TextBlock Text="INSCRIPCIONES Y PAGOS" Style="{StaticResource Header}"/>

                    <!--Sección 1: La Rejilla de Datos (Mostrar Equipos)-->
                    <TextBlock Text="Lista de Equipos Inscritos:" Style="{StaticResource SubHeader}"/>
                    <DataGrid x:Name="dtgEquiposInscritos" Height="150" AutoGenerateColumns="True" Margin="0,0,0,15"/>

                    <!--Sección 2: El Formulario de Registro (Registrar Pagos)-->
                    <TextBlock Text="Registrar Pago / Inscripción:" Style="{StaticResource SubHeader}"/>

                    <!--Equipo-->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Equipo:" Width="120" Style="{StaticResource FormLabel}"/>
                        <ComboBox x:Name="cbEquipo" Width="200"/>
                    </StackPanel>

                    <!--monto de pago-->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Monto:" Width="120" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="txtMontoPago" Width="200"/>
                    </StackPanel>

                    <!--metodo de pago-->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Método de Pago:" Width="120" Style="{StaticResource FormLabel}"/>
                        <ComboBox x:Name="cbMetodoPago" Width="200">
                            <ComboBoxItem Content="Efectivo"/>
                            <ComboBoxItem Content="Yape"/>
                            <ComboBoxItem Content="Plin"/>
                        </ComboBox>
                    </StackPanel>

                    <!--Sección 3: Los Botones de Acción-->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,5">
                        <Button x:Name="btnRegistrarInscripcion" Content="Registrar Inscripción" Width="150" Click="btnRegistrarInscripcion_Click"/>
                        <Button x:Name="btnVerificarDeuda" Content="Verificar Deuda" Width="120" Click="btnVerificarDeuda_Click"/>
                        <Button x:Name="btnConfirmarPago" Content="Confirmar Pago" Width="120" Click="btnConfirmarPago_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <TabItem Header="Equipos">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="EQUIPOS" Style="{StaticResource Header}"/>
                <DataGrid x:Name="dtgEquipos" Height="400">
                    <!--Definición Manual de Columnas-->
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Width="*" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="Nombre Equipo" Width="*"/>
                        <DataGridTextColumn Header="Delegado" Width="*"/>
                        <DataGridTextColumn Header="Móvil Delegado" Width="*"/>
                        <DataGridTextColumn Header="Forma de Pago" Width="*"/>
                        <DataGridTextColumn Header="Monto" Width="*"/>
                        <DataGridTextColumn Header="Fecha Pago" Width="*"/>
                        <DataGridTextColumn Header="Estado" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
            </ScrollViewer>
        </TabItem>

        <TabItem Header="Jugadores">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="Registro de Jugadores" Style="{StaticResource Header}"/>
                <DataGrid x:Name="dtgJugadores" Height="400">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Width="*" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="Equipo" Width="*"/>
                        <DataGridTextColumn Header="DNI" Width="*"/>
                        <DataGridTextColumn Header="Nombre" Width="*"/>
                        <DataGridTextColumn Header="Apellidos" Width="*"/>
                        <DataGridTextColumn Header="N°" Width="*"/>
                        <DataGridTextColumn Header="Móvil UNAP"  Width="*"/>
                        <DataGridTextColumn Header="Camiseta" Width="*"/>
                        <DataGridTextColumn Header="Posición" Width="*"/>
                        <DataGridTextColumn Header="Estado" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
            </ScrollViewer>
        </TabItem>

        <TabItem Header="Grupos">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="GRUPOS" Style="{StaticResource Header}"/>

                    <!--Sección 1: Generación de Grupos (Las Acciones)-->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Cantidad de Grupos:" Width="150" Style="{StaticResource FormLabel}"/>
                        <ComboBox x:Name="cbCantidadGrupos" Width="120">
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="6"/>
                            <ComboBoxItem Content="8"/>
                        </ComboBox>
                    </StackPanel>

                    <Button x:Name="btnGenerarGrupos" Content="Generar Sorteo Automático" Width="220" Height="30" Margin="0,0,0,15"/>

                    <!--Sección 2: Visualización del Sorteo (Resultado Dinámico)-->
                    <TextBlock Text="Resultado del Sorteo:" Style="{StaticResource SubHeader}"/>
                    <ItemsControl x:Name="panelGrupos">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource CardBorder}">
                                    <StackPanel>
                                        <TextBlock Style="{StaticResource SubHeader}" Margin="0"/>
                                        <DataGrid HeadersVisibility="Column" Height="150">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="ID Equipo" Width="*"/>
                                                <DataGridTextColumn Header="Nombre Equipo" Width="*"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!--Sección 3: Visualización Plana (Vista de Tabla)-->
                    <TextBlock Text="Lista de Equipos por Grupo" Style="{StaticResource SubHeader}"/>
                    <DataGrid x:Name="dtgGrupos" Height="250">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Grupo" Width="*"/>
                            <DataGridTextColumn Header="ID Equipo" Width="*" Visibility="Collapsed"/>
                            <DataGridTextColumn Header="Nombre Equipo" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button x:Name="btnConfirmarGrupos" Content="Confirmar Grupos" Width="220" Height="30" Margin="0,20,0,0"/>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <TabItem Header="Calendario">
            <StackPanel Margin="20">
                <TextBlock Text="CALENDARIO DE PARTIDOS" Style="{StaticResource Header}"/>
                
                <!--Sección 1: El Filtro-->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Filtrar por Grupo:" Width="120" Style="{StaticResource FormLabel}"/>
                    <ComboBox x:Name="cbFiltroGrupo" Width="120">
                        <ComboBoxItem Content="Todos"/>
                        <ComboBoxItem Content="A"/>
                        <ComboBoxItem Content="B"/>
                    </ComboBox>
                </StackPanel>

                <!--Sección 2: La Rejilla de Partidos-->
                <DataGrid x:Name="dtgCalendario" Height="350">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID Partido" Width="*" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="Grupo" Width="*"/>
                        <DataGridTextColumn Header="Fecha" Width="*"/>
                        <DataGridTextColumn Header="Hora" Width="*"/>
                        <DataGridTextColumn Header="Equipo Local" Width="*"/>
                        <DataGridTextColumn Header="Equipo Visitante" Width="*"/>
                        <DataGridTextColumn Header="Cancha" Width="*"/>
                        <DataGridTextColumn Header="Estado" Width="*"/>
                        <DataGridTextColumn Header="Descansa" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </TabItem>

        <TabItem Header="Partidos y Resultados">
            <StackPanel Margin="20">
                <TextBlock Text="REGISTRO DE PARTIDOS Y RESULTADOS" Style="{StaticResource Header}"/>
                <TextBlock Text="Lista de Resultados de Partidos:" Style="{StaticResource SubHeader}"/>
                <!--dtg de los resultados-->
                <DataGrid x:Name="dgResultadosPartidos" Height="350">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID Partido" Width="100" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="Equipo Local" Width="*"/>
                        <DataGridTextColumn Header="Goles Local" Width="*"/>
                        <DataGridTextColumn Header="Equipo Visitante" Width="*"/>
                        <DataGridTextColumn Header="Goles Visitante" Width="*"/>
                        <DataGridTextColumn Header="Estado" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </TabItem>

        <TabItem Header="Goles y Estadísticas">
            <StackPanel Margin="20">
                <TextBlock Text="GOLES Y ESTADÍSTICAS" Style="{StaticResource Header}"/>
                <!--dtg de goles -->
                <DataGrid x:Name="dgGolesEstadisticas" Height="350">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID Partido" Width="*" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="Equipo" Width="*"/>
                        <DataGridTextColumn Header="DNI Jugador" Width="*"/>
                        <DataGridTextColumn Header="Minuto" Width="*"/>
                        <DataGridTextColumn Header="Tipo Gol" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </TabItem>

        <TabItem Header="Tabla de Posiciones">
            <StackPanel Margin="20">
                <TextBlock Text="TABLA DE POSICIONES" Style="{StaticResource Header}"/>
                <!--dtg de tabla de posiciones-->
                <DataGrid x:Name="dgTablaPosiciones" Height="350">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Grupo" Width="60"/>
                        <DataGridTextColumn Header="Equipo" Width="*"/>
                        <DataGridTextColumn Header="PJ" Width="40"/>
                        <DataGridTextColumn Header="PG" Width="40"/>
                        <DataGridTextColumn Header="PE" Width="40"/>
                        <DataGridTextColumn Header="PP" Width="40"/>
                        <DataGridTextColumn Header="GF" Width="40"/>
                        <DataGridTextColumn Header="GC" Width="40"/>
                        <DataGridTextColumn Header="DG" Width="40"/>
                        <DataGridTextColumn Header="PTS" Width="50"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </TabItem>

    </TabControl>
</Window>